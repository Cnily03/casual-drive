<header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand ms-2" href="/">下一代的云盘</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse ms-4" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-lg-0">
                    <% if(logged) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/myresources">我的资源</a>
                    </li>
                    <% } %>

                    <li class="nav-item">
                        <a class="nav-link" href="/sharezone">公共资源区</a>
                    </li>
                </ul>
                <script type="text/javascript">
                    (() => {
                        const e = document.querySelector("li.nav-item .nav-link[href='<%= cur_nav_path %>']");
                        e.classList.add("active"), e.setAttribute("aria-current", "page")
                    })()
                </script>

                <ul class="navbar-nav ms-auto mb-lg-0">
                    <% if(logged) { %>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="javascript:void(0)" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <%= data.username %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="javascript:void(0)" id="logout">登出</a></li>
                        </ul>
                        <script type="text/javascript">
                            document.getElementById("logout").addEventListener("click", e => {
                                fetch("/api/account/logout", { method: "POST", credentials: "include" })
                                    .then(res => res.json().then(data => { window.location = data.redirect || "/" }));
                            })
                        </script>
                    </li>
                    <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/account/signin">登录</a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
</header>